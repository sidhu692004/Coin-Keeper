<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="#FF6F00"
                android:endColor="#FF8F00"
                android:angle="90"/> <!-- Orange gradient -->
            <solid android:color="#FF6F00"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="#FF8F00"
                android:endColor="#FFA726"
                android:angle="90"/> <!-- Lighter orange gradient -->
            <solid android:color="#FF8F00"/>
        </shape>
    </item>
</selector>
